<main class="mdl-layout__content">
    <div class="page-content">


<div class="mdl-color--grey-100">
<div class="mdl-js-layout ">
  <%= devise_error_messages! %>

      <div class="mdl-layout formci">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <main class="mdl-layout__content formc">

              <div class="mdl-card mdl-shadow--6dp">
                  <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                    <h2 class="mdl-card__title-text">Log In..</h2>
                  </div>
                <div class="mdl-card__supporting-text">
                    <div class="mdl-textfield mdl-js-textfield">
                        <div class="field">
                            <%= f.label :email, class: "mdl-textfield__label", for:"email" %>
                            <%= f.email_field :email, autofocus: true,class: "mdl-textfield__input", type:"email" ,id:"email" %>
                        </div>
                    </div>

                    <div class="mdl-textfield mdl-js-textfield">
                      <div class="field">
                        <%= f.label :password , class: "mdl-textfield__label", for:"password"%>
                        <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input", type:"password" ,id:"password" %>
                      </div>
                    </div>
                    <% if devise_mapping.rememberable? -%>

                      <div class="field">
                        <%= f.label :remember_me %>
                        <%= f.check_box :remember_me %>
      
                      </div>
                    <% end -%>
                    <div class="mdl-card__actions mdl-card--border">
                    <div class="actions">
                      <%= f.submit "Log in", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--colored" %>
                    </div>
                  </div>
                </div>
                             
              </main>
          <% end %>

<%= render "devise/shared/links" %>
 </div>
 </div>
</div>

</div>
</main>