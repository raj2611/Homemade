<main class="mdl-layout__content">
    <div class="page-content">


<h2 class= "textcenter">Forgot your password? </h2>

<div class="mdl-js-layout mdl-color--grey-100">


     	 <div class="mdl-layout formci">
      
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  									<%= devise_error_messages! %>
 				<main class="mdl-layout__content formc">

              		<div class="mdl-card mdl-shadow--6dp">
                  		<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                    		<h2 class="mdl-card__title-text">Forget?</h2>
                  		</div>
                		<div class="mdl-card__supporting-text">
                    		<div class="mdl-textfield mdl-js-textfield">
  								<div class="field">
    								<%= f.label :email, class: "mdl-textfield__label", for:"email" %>
    								<%= f.email_field :email, autofocus: true,class: "mdl-textfield__input", type:"email" ,id:"email" %>
  								</div>
							</div>
  							<div class="actions">
    						<%= f.submit "Send me reset password instructions", class: "mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--colored" %>
 							</div>
   						</div>
               		 </div>
                              
                </main>
					<% end %>

<%= render "devise/shared/links" %>
 </div>
 
</div>

</div>
</main>