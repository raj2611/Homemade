<main class="mdl-layout__content">
    <div class="page-content">
        


<h2 class= "textcenter">Edit <%= resource_name.to_s.humanize %></h2>

<div class="mdl-js-layout mdl-color--grey-100">


<div class="mdl-layout formci">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

    <main class="mdl-layout__content formc">

          <div class="mdl-card mdl-shadow--6dp">
              <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                  <h2 class="mdl-card__title-text">Edit..</h2>
              </div>
              <div class="mdl-card__supporting-text">
                <form action="#">
                <div class="upload-preview">
    <img class="upim" />
</div>
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--file">

                                  <input class="mdl-textfield__input" placeholder="Upload Your Profile Picture" type="text" id="uploadFile" readonly/>

                                  <div class="mdl-button mdl-button--primary mdl-button--icon mdl-button--file ">
                                    <i class="material-icons">add_a_photo</i>
                                    <%= f.file_field :profilepic, accept: 'image/jpeg, image/gif, image/png', id: "uploadBtn", class: "file" %>

                                  </div>
                                </div>
                <div class="mdl-textfield mdl-js-textfield">
 <div class="field">
<%= f.label :username,class: "mdl-textfield__label", for:"username" %>
      <%= f.text_field :username , class: "mdl-textfield__input", type:"text" ,id:"username"%>
      </div>
      </div>
        <div class="mdl-textfield mdl-js-textfield">
  <div class="field">
    <%= f.label :email, class: "mdl-textfield__label", for:"email" %>
    <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input", type:"email" ,id:"email" %>
  </div>
</div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="mdl-textfield mdl-js-textfield">
  <div class="field">
    <%= f.label :password,class: "mdl-textfield__label", for:"leave blank if you don't want to change it" %> 
    <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input", type:"password" ,id:"password"  %>
    
  </div>
</div>
 <div class="mdl-textfield mdl-js-textfield">
  <div class="field">
    <%= f.label :password_confirmation ,class: "mdl-textfield__label", for:"leave blank if you don't want to change it"%>
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "mdl-textfield__input", type:"password" ,id:"password" %>
  </div>
</div>
<div class="mdl-textfield mdl-js-textfield">
  <div class="field">
    <%= f.label :current_password ,class: "mdl-textfield__label", for:"we need your current password to confirm your changes"%>
    <%= f.password_field :current_password, autocomplete: "off",class: "mdl-textfield__input", type:"password" ,id:"password" %>
  </div>
</div>
  <div class="actions">
    <%= f.submit "Update",class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
  </div>

   </form>
 
          </div>
                       </div>
      
    </main>
<% end %>
 </div>
 <div class="mdl-layout formci">
 <main class="mdl-layout__content formc">

          <div class="mdl-card mdl-shadow--6dp">
              <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                  <h2 class="mdl-card__title-text">Cancel my account..</h2>
              </div>
              <div class="mdl-card__supporting-text">
 
              <h3>Unhappy?</h3>
                      
                    <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
                      
                  <%= link_to "Back", :back, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
              </div>
          </div>
</main>
</div>
</div>

</div>
</main>


<script type="text/javascript">


    document.getElementById("uploadBtn").onchange = function () {
    document.getElementById("uploadFile").value = this.files[0].name;
};
$(document).ready(function(){
    var preview = $(".upload-preview img");
    
    $(".file").change(function(event){
       var input = $(event.currentTarget);
       var file = input[0].files[0];
       var reader = new FileReader();
       reader.onload = function(e){
           image_base64 = e.target.result;
           preview.attr("src", image_base64);
       };
       reader.readAsDataURL(file);
    });
});
</script>
